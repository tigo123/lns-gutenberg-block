{
    "name": "lns-gutenberg-block",
    "version": "0.1.0",
    "description": "Gutenberg Blocks used for your website. Developed by LeNamSite",
    "author": "LeNamSite",
    "license": "GPL-2.0-or-later",
    "scripts": {
        "start-blockquote": "cd ./includes/blocks/lns-blockquote && npm run start",
        "start-conclusion": "cd ./includes/blocks/lns-conclusion && npm run start",
        "start-horizontal-product-card": "cd ./includes/blocks/lns-horizontal-product-card && npm run start",
        "build-blockquote": "cd ./includes/blocks/lns-blockquote && npm run build",
        "build-conclusion": "cd ./includes/blocks/lns-conclusion && npm run build",
        "build-horizontal-product-card": "cd ./includes/blocks/lns-horizontal-product-card && npm run build",
        "build-all": "concurrently \"npm run build-blockquote\" \"npm run build-conclusion\" \"npm run build-horizontal-product-card\"",
        "packages-update": "wp-scripts packages-update",
        "plugin-zip": "wp-scripts plugin-zip",
        "env": "wp-env"
    },
    "devDependencies": {
        "@wordpress/env": "^10.25.0",
        "@wordpress/scripts": "^30.18.0"
    },
    "dependencies": {
        "@10up/block-components": "^1.21.2",
        "concurrently": "^9.2.0"
    }
}
